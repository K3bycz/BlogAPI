{# templates/blog/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Blog{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>Najnowsze blogi:</h1>
        <div class="row">
            {% for post in posts %}
                <div class="col-md-4 mb-4">
                    <div class="card" style="padding: 10px; justify-content:center; text-align:center; background-color:lightgrey">
                        {% if post.imageUrl %}
                            <img src="{{ post.imageUrl }}" class="card-img-top" alt="{{ post.title }}">
                        {% endif %}
                        <div class="card-body" style="border-bottom: solid 1px black">
                            <h3 class="card-title">{{ post.title }}</h3>
                            <p class="card-text">{{ post.content|slice(0, 150) }}...</p>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
    <div style="text-align:center; margin:20px">
        <button style="padding:5px; background-color:lightgrey"><a href="/logout" style="color:black"> Wyloguj siÄ™ </a></button>
    </div>
{% endblock %}