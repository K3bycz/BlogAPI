{% extends 'base.html.twig' %}

{% block title %}{{ post.title }}{% endblock %}

{% block body %}
    <div class="container mt-4">
        <article>
            <h1>{{ post.title }}</h1>
            {% if post.imageUrl %}
                <img src="{{ post.imageUrl }}" class="img-fluid mb-4" alt="{{ post.title }}">
            {% endif %}
            <div class="content">
                {{ post.content|raw }}
            </div>
            <div class="meta mt-4">
                <small>Created: {{ post.createdAt|date('Y-m-d H:i:s') }}</small>
            </div>
        </article>
        <a href="{{ path('blog_index') }}" class="btn btn-secondary mt-4">Powr√≥t do listy</a>
    </div>
{% endblock %}